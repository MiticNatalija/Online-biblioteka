@model int?
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registracija</title>
    <meta charset="utf-8" />

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body background="~/Content/Images/knjiga.jpg">
   @using (Html.BeginForm("Nazad", "Korisnik", FormMethod.Post))
   {
    <div class="container-fluid">
        <div class="navbar-header" style="padding-left: 10px">
            <button type="submit" class="btn btn-default navbar-btn pull-left">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </button>
        </div>
    </div>
   }
    <br />
    <br />
    @{ 
        if(Model==1)
        {
            <div class="alert alert-danger fade in">Korisnicko ime je vec u upotrebi!</div>
        }
    }
        <div class="col-sm-10 form-group-lg">
            <h3>Registruj se: </h3>
            @using (Html.BeginForm("Registrovanje", "Korisnik", FormMethod.Post))
            {

                <label> Korisnicko ime: </label>

                <input class="form-control" type="text" name="username" id="username" />
                <label>Sifra: </label>
                <input class="form-control" type="password" name="password" id="password" />
                <br />
                <button type="submit" class="btn btn-lg btn-success">Registruj se </button>
            }
        </div>
</body>
</html>
